<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <%- include('partials/head') %>
  </head>
  <body>
  <%- include('partials/header') %>
  <div class="container-fluid container-fluida bg-1 no_top_margin">
    <h1 class="text-center">Welcome to your Dashboard, <%= info.teacherInfo.f_name %> <%= info.teacherInfo.l_name %> ! </h1>
    <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1"><hr></div>
   

    <!-- <h4>Hello, <%= info.teacherInfo.f_name %> <%= info.teacherInfo.l_name %></h4> -->
<div class="row">
    <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 ">
        <h3 class="text-center">Your class</h3>
    </div>
</div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1 ">
            <a href="class/<%= info.classDetails.leadingClass.class_number %>" class="class-card">
          <ul class="list-unstyled">
            <li>Class number <%= info.classDetails.leadingClass.class_number %>, with <%= info.classDetails.leadingClass.class_strength %> students. </li>
          </ul>
        </a>
      </div>
    </div>

  
<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1"><hr></div>
    
<!-- <div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10"><hr></div>
  <div class="col-md-1"></div>
</div> -->
<div class="row">
    <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 ">
        <h3 class="text-center">Other classes you handle</h3>
    </div>
</div>

    <div class="row">
      <% info.classDetails.classList.forEach((cls) => { %>
      <div class="col-md-2 col-xs-6">
        <a href="class/<%= cls.class_number %>" class="class-card">
          <ul class="list-unstyled">
            <li>Class number <%= cls.class_number %>, with <%= cls.class_strength %> students. </li>
            <!-- <li>class strength: <%= cls.class_strength %></li> -->
          </ul>
        </a>
      </div>
      <% }); %>
    </div>

  </div>
  </body>
</html>