<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard</title>
    <%- include('partials/head') %>
  </head>
  <body>
  <%- include('partials/header') %>
  <div class="container">
    <h2 class="text-center">Dashboard</h2>
    <hr>

    <h4>Hello, <%= info.teacherInfo.f_name %> <%= info.teacherInfo.l_name %></h4>

    <div class="row">
      <div class="col-md-4 col-xs-6">
        <a href="class/<%= info.classDetails.leadingClass.class_number %>" class="class-card">
          <ul class="list-unstyled">
            <li>class number: <%= info.classDetails.leadingClass.class_number %></li>
            <li>class strength: <%= info.classDetails.leadingClass.class_strength %></li>
          </ul>
        </a>
      </div>

      <div class="col-md-8 col-xs-6">
        <h4 class="text-center">your class</h4>
      </div>
    </div>


    <div class="row">
      <% info.classDetails.classList.forEach((cls) => { %>
      <div class="col-md-4 col-xs-6">
        <a href="class/<%= cls.class_number %>" class="class-card">
          <ul class="list-unstyled">
            <li>class number: <%= cls.class_number %></li>
            <li>class strength: <%= cls.class_strength %></li>
          </ul>
        </a>
      </div>
      <% }); %>
    </div>

  </div>
  </body>
</html>