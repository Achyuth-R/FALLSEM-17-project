  <head>
    <title>Login</title>
    <%- include('partials/head') %>
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">
    
  </head>
  <body>
  
    <div class="container-fluid container-fluida bg-4 text-center">
      <% if (prevAction === 'loginFail') {%>
      <div class="row">
        <div class="col-md-12 bg-danger">Login Failed! Please try again</div>
      </div>
      <% } %>
      <% if (prevAction === 'logout') {%>
      <div class="row">
        <div class="col-md-12 bg-success">Succesfully logged out</div>
      </div>
      <% } %>
      <div class="row bg-4 full">
        <div class="col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1 col-xs-12 bg-1">
          <div class="row">
              <div class="col-md-8 col-md-offset-2 bg-1">
              <img src="images/Apprise_logo.png" class="img-fluid mx-auto d-block top_margin" alt="Apprise"  width="550" height="550">
          </div>
          </div>
            <form action="/login" method="post" class="animated fadeIn">
              <div class="form-group top_margin">
                  <input type="text" class="form-control hide" id="login-id" name="userid" required disabled="disabled">
                <input type="text" class="form-control" id="login-id" name="userid" placeholder="Login ID" required>
                
              </div>
              <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
              </div>
              <div class="form-group">
                <select name="user_type" class="form-control select">
                  <option value="teacher">Teacher</option>
                  <option value="guardian">Guardian</option>
                </select>
              </div>
              <div class="form-group text-center">
                <input type="submit" class="btn" value="LOGIN" >
              </div>
            </form>

        </div>
      </div>
     

